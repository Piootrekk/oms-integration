{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "target": "ES2023",
    "sourceMap": true,
    "rootDir": "mongo-lib",
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "strictNullChecks": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },

  "include": ["mongo-lib/**/*"]
}
