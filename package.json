{
  "name": "shop-orders",
  "version": "1.0.0",
  "description": "",
  "license": "UNLICENSED",
  "author": "Piotr Wilkowiecki",
  "type": "commonjs",
  "scripts": {
    "dev:api": "nodemon --config app/api/nodemon.json",
    "dev:worker": "ts-node -r tsconfig-paths/register -P app/worker/tsconfig.json app/worker/src/index.ts",
    "build:api": "tsc -b app/api && tsc-alias -p app/api/tsconfig.json",
    "build:worker": "tsc -b app/worker && tsc-alias -p app/worker/tsconfig.json",
    "build:share": "tsc -b app/share && tsc-alias -p app/share/tsconfig.json",
    "build": "tsc -p tsconfig.build.json",
    "alias": "tsc-alias -p app/api/tsconfig.json && tsc-alias -p app/worker/tsconfig.json",
    "start:api": "node -r tsconfig-paths/register app/api/dist/index.js",
    "start:worker": "node -r tsconfig-paths/register app/worker/dist/index.js",
    "test": "jest",
    "test:api": "jest --selectProjects api",
    "test:worker": "jest --selectProjects worker",
    "test:share": "jest --selectProjects mongo-lib",
    "test:api:unit": "jest --config jest.unit.config.ts --selectProjects api",
    "test:worker:unit": "jest --config jest.unit.config.ts --selectProjects worker",
    "test:share:unit": "jest --config jest.unit.config.ts --selectProjects mongo-lib",
    "test:api:int": "jest --config jest.config.ts --selectProjects api",
    "test:worker:int": "jest --config jest.config.ts --selectProjects worker",
    "test:share:int": "jest --config jest.config.ts --selectProjects mongo-lib"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "cron": "^4.3.3",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "idosell": "^0.3.17",
    "mongodb": "^6.18.0",
    "swagger-ui-express": "^5.0.1"
  },
  "packageManager": "npm@11.5.2"
}
