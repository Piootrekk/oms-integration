{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./app/shared/src/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./app/api" },
    { "path": "./app/worker" },
    { "path": "./app/shared" }
  ]
}
